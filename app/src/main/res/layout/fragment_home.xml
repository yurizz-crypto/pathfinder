<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/gradient_bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvHomeTitle"
            android:text="Pathfinder"
            android:textSize="28sp"
            android:textColor="@android:color/white"
            android:fontFamily="@font/poppins"
            android:textStyle="bold"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageButton
            android:id="@+id/btnLogout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_lock_power_off"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="8dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            app:tint="@android:color/white" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tvGreeting"
        android:text="Hello Student!"
        android:textSize="18sp"
        android:textColor="#E0E0E0"
        android:fontFamily="@font/poppins"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="vertical">
            <TextView android:text="Current Status" android:textColor="@color/brand_primary" android:textStyle="bold" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <TextView android:id="@+id/tvStatusMsg" android:text="Ready to assess." android:textColor="@color/black_2" android:layout_marginTop="4dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btnStart"
        android:text="Start Assessment"
        android:fontFamily="@font/poppins"
        android:textStyle="bold"
        android:textColor="@color/brand_primary"
        android:backgroundTint="@color/brand_secondary"
        android:layout_marginTop="32dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:cornerRadius="12dp"/>

    <TextView
        android:id="@+id/tvRecTitle"
        android:text="Your Recommended Courses"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginTop="32dp"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvHomeRecs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp" />

</LinearLayout>