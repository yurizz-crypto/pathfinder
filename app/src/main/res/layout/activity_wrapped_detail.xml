<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1D1D1D"
    android:padding="24dp">

    <!-- Progress Bars at Top -->
    <LinearLayout
        android:id="@+id/llProgress"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp">

        <ProgressBar android:id="@+id/progress1" style="?android:attr/progressBarStyleHorizontal" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:layout_marginEnd="4dp" android:progressDrawable="@drawable/story_progress"/>
        <ProgressBar android:id="@+id/progress2" style="?android:attr/progressBarStyleHorizontal" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:layout_marginEnd="4dp" android:progressDrawable="@drawable/story_progress"/>
        <ProgressBar android:id="@+id/progress3" style="?android:attr/progressBarStyleHorizontal" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:layout_marginEnd="4dp" android:progressDrawable="@drawable/story_progress"/>
        <ProgressBar android:id="@+id/progress4" style="?android:attr/progressBarStyleHorizontal" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:layout_marginEnd="4dp" android:progressDrawable="@drawable/story_progress"/>
        <ProgressBar android:id="@+id/progress5" style="?android:attr/progressBarStyleHorizontal" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:layout_marginEnd="4dp" android:progressDrawable="@drawable/story_progress"/>
        <ProgressBar android:id="@+id/progress6" style="?android:attr/progressBarStyleHorizontal" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:progressDrawable="@drawable/story_progress"/>
    </LinearLayout>

    <!-- Title -->
    <TextView
        android:id="@+id/tvStoryTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TITLE"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:letterSpacing="0.1"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/llProgress"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Main Headline -->

    <!-- Chart Container - FIXED HEIGHT, CENTERED, NEVER OVERLAPS -->
    <TextView
        android:id="@+id/tvStoryMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:text="Main Headline"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tvStoryTitle"
        tools:layout_editor_absoluteX="24dp" />

    <FrameLayout
        android:id="@+id/chartContainer"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_marginTop="32dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/tvStoryMain"
        app:layout_constraintBottom_toTopOf="@id/tvStorySub">

        <!-- Radar Chart (only visible on step 2) -->
        <com.prototype.pathfinder.ui.views.RadarChartView
            android:id="@+id/radarChart"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_gravity="center"
            android:visibility="gone" />

    </FrameLayout>

    <!-- Sub Text / Description -->
    <TextView
        android:id="@+id/tvStorySub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Detailed description goes here..."
        android:textColor="#E0E0E0"
        android:textSize="18sp"
        android:lineSpacingExtra="6dp"
        android:gravity="center"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="80dp"
        app:layout_constraintTop_toBottomOf="@id/chartContainer"
        app:layout_constraintBottom_toTopOf="@id/tvTapHint" />

    <!-- Tap to continue - Always visible at bottom -->
    <TextView
        android:id="@+id/tvTapHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tap anywhere to continue"
        android:textColor="#88FFFFFF"
        android:textSize="13sp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>