<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_bg">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieReveal"
        android:layout_width="250dp"
        android:layout_height="250dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:lottie_rawRes="@raw/sparkles"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        android:visibility="visible" />

    <TextView
        android:id="@+id/tvCalculating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculating Your Path..."
        android:fontFamily="@font/poppins"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:visibility="visible"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/lottieReveal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ProgressBar
        android:id="@+id/pbRevealFallback"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminateTint="@android:color/white"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedResults"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center_horizontal">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardBackgroundColor="#FFFFFF"
                app:strokeWidth="0dp"
                android:layout_marginTop="32dp">

                <TextView
                    android:id="@+id/tvConfidence"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Confidence: 98%"
                    android:fontFamily="@font/poppins"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="8dp"
                    android:textColor="#084924" />
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Top Recommendations"
                android:fontFamily="@font/poppins"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="12dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvRecommendations"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:minHeight="200dp" />

            <Button
                android:id="@+id/btnShare"
                android:text="Share My Result"
                android:fontFamily="@font/poppins"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                app:cornerRadius="12dp"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:backgroundTint="@android:color/white"
                android:textColor="#084924"
                android:layout_marginTop="40dp"/>

            <Button
                android:id="@+id/btnHome"
                android:text="Back to Dashboard"
                android:fontFamily="@font/poppins"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                app:cornerRadius="12dp"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:backgroundTint="#FDC601"
                android:textColor="#084924"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="32dp"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>